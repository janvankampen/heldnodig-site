{% block content %}
	<div class="row">
		<div class="col-md-4">

			{% if hero.IsVerifiedByMail==0 %}
				<form method="post">
					<input name="verify" value="1" type="hidden" />
					<button type="submit" class="btn btn-primary mb-2">Klik hier om je aanmelding te bevestigen</button>
				</form>
			{% else %}
				<p>Je aanmelding is geverifieerd. Je bent nu een held! Zodra we een relevant hulpverzoek voor je hebben, krijg je hem via de mail.</p>
			<p>
				<a href="index.php">< Terug naar de homepage</a>
			</p>
			{% endif %}
		</div>
	</div>
{% endblock %}
